<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/bootstrap.css">
</head>
<body>
    @model spering_html.Models.User

    <div class="container" id="container">
        <div class="form-container sign-up-container">
            <form asp-action="Register" asp-controller="Home" method="post">
                <h1>Hesap Oluştur</h1>
                
                <div class="form-group">
                    <input type="text" placeholder="Name" asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <input type="email" placeholder="Email" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <input type="password" placeholder="Password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                
                <button type="submit" id="btn-login" class="btn btn-primary">Oluştur</button>
            </form>
        </div>
        <div class="form-container sign-in-container">
            <form asp-action="Login" asp-controller="Home" method="post">
                <h1>Giriş Yap</h1>
                
                <div class="form-group">
                    <input type="email" placeholder="Email" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <input type="password" placeholder="Password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                
                
                <button type="submit" id="btn-login" class="btn btn-primary" href="/Home/Profil">Giriş</button>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Tekrar hoşgeldiniz!</h1>
                    <p>Zaten tanışıyor muyuz? <br>Bizimle bağlantıda kalmak için kişisel bilgilerinizle giriş yapın.</p>
                    <button class="ghost" id="signIn">Giriş Yap</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>Merhaba</h1>
                    <p>Buralarda yeni misiniz? <br>Kişisel bilgilerinizi girin ve bizimle yolculuğa başlayın.</p>
                    <button class="ghost" id="signUp">Kayıt Ol</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/login.js"></script>
    <script src="/js/jquery-3.4.1.min.js"></script>
    <script src="/js/bootstrap.js"></script>
    <script src="/js/custom.js"></script>
</body>
</html>
